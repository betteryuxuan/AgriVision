<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_more_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingTop="3dp"
    android:paddingEnd="15dp"
    android:paddingBottom="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_more_useravatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="44dp"
        android:elevation="1dp"
        android:padding="2dp"
        android:src="@drawable/ic_launcher_background"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_more_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:textColor="#8c8c8c"
        android:text="查看更多"
        app:layout_constraintStart_toEndOf="@+id/img_more_useravatar"
        app:layout_constraintTop_toTopOf="@+id/img_more_useravatar" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:letterSpacing="0.1"
        android:paddingStart="15dp"
        android:shadowColor="@color/gray4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="AI问答"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.example.module.libBase.customview.CustomHorizontalScrollView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ai_1"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_launcher_background"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_ai_2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="农业百科"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <net.center.blurview.ShapeBlurView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        app:blur_corner_radius_bottom_left="10dp"
                        app:blur_corner_radius_bottom_right="10dp"
                        app:blur_down_sample="1.0"
                        app:blur_mode="rectangle"
                        app:blur_overlay_color="#33515151"
                        app:blur_radius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:shadowColor="@color/gray"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="农业全景知识库"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ai_2"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_launcher_background"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_ai_2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="农学先贤"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <net.center.blurview.ShapeBlurView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        app:blur_corner_radius_bottom_left="10dp"
                        app:blur_corner_radius_bottom_right="10dp"
                        app:blur_down_sample="1.0"
                        app:blur_mode="rectangle"
                        app:blur_overlay_color="#33515151"
                        app:blur_radius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:shadowColor="@color/gray"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="贾思勰与《齐民要术》"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ai_3"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_launcher_background"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_ai_2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="四时节气"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <net.center.blurview.ShapeBlurView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        app:blur_corner_radius_bottom_left="10dp"
                        app:blur_corner_radius_bottom_right="10dp"
                        app:blur_down_sample="1.0"
                        app:blur_mode="rectangle"
                        app:blur_overlay_color="#33515151"
                        app:blur_radius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:shadowColor="@color/gray"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="农耕文明的时间密码"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ai_4"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_launcher_background"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_ai_2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="华夏农脉"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <net.center.blurview.ShapeBlurView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        app:blur_corner_radius_bottom_left="10dp"
                        app:blur_corner_radius_bottom_right="10dp"
                        app:blur_down_sample="1.0"
                        app:blur_mode="rectangle"
                        app:blur_overlay_color="#33515151"
                        app:blur_radius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:shadowColor="@color/gray"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="地方农作特色"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </com.example.module.libBase.customview.CustomHorizontalScrollView>
</LinearLayout>

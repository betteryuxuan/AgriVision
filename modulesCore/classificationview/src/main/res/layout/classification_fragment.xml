<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-45dp"
    android:background="#F9FAFC">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_classification_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youth.banner.Banner
                android:id="@+id/banner_classification_top"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:banner_auto_loop="true"
                app:banner_indicator_normal_width="5dp"
                app:banner_indicator_selected_width="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作物"
                android:letterSpacing="0.1"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/ziti3"
                android:textSize="42sp"
                app:layout_constraintBottom_toBottomOf="@+id/banner_classification_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/banner_classification_top" />



            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/corner_background"
                android:layout_marginTop="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="粮食作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_food"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_oil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="油料作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_oil"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_oil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/tv_category_vegetable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蔬菜作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_vegetable"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_vegetable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_fruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水果作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_fruit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_fruit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_wild_fruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="野果作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_wild_fruit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_wild_fruit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_seed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="种子作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_seed"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_seed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category_medicinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="药草作物"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_category_medicinal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ic_more" />
                </LinearLayout>

                <com.example.module.libBase.MyView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_medicinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.example.module.libBase.MyView>

            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="165dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_img"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/banner_classification_top"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


